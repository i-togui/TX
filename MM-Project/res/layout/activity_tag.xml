<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1200dp"
    android:layout_height="700dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:weightSum="4.0"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TagActivity" >
	    <LinearLayout
	    android:layout_width="1165dp"
	    android:layout_height="150dp"
	    android:layout_weight="1.0"
	    android:weightSum="10.0"
	    android:padding="10dp"
	    android:layout_marginLeft="30dp"
	    android:orientation="horizontal">
		    <SeekBar
	        android:id="@+id/seek_bar"
	        android:layout_width="800dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
	        android:layout_centerInParent="true" />
	 
			<ImageView 
			android:id="@+id/img_play"
		    android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
	        android:src="@drawable/play"
	        android:onClick="playAction"/>
			
			<ImageView 
			android:id="@+id/img_pause"
		    android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
	        android:src="@drawable/ic_action_pause_over_video"
	        android:onClick="pauseAction"/>
			
			<ImageView 
			android:id="@+id/img_save"
		    android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
	        android:src="@drawable/ic_action_save"
	        android:onClick="saveAll"/>
	    </LinearLayout>
	   	<LinearLayout
	    android:layout_width="1165dp"
	    android:layout_height="500dp"
	    android:layout_weight="1.0"
	    android:weightSum="10.0"
	    android:layout_marginTop="10dp"
	    android:padding="10dp"
	    android:orientation="horizontal">
			<LinearLayout
		    android:layout_width="400dp"
		    android:layout_height="480dp"
		    android:orientation="vertical">
			    <TextView
	            android:id="@+id/textWho"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:gravity="center_horizontal"
	            android:layout_weight="1.0"
	            android:text="Who's speacking"
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
			    <TextView
	            android:id="@+id/textWhy"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:gravity="center_horizontal"
	            android:layout_weight="1.0"
	            android:text="Question's"
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
				<TextView
	            android:id="@+id/texthowmuch"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:gravity="center_horizontal"
	            android:layout_weight="1.0"
	            android:text="Duration"
	            android:textSize="20dp"
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
				<TextView
	            android:id="@+id/textcomment"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:gravity="center_horizontal"
	            android:layout_weight="1.0"
	            android:text="Comment"
	            android:singleLine="true"
	            android:scrollbars ="horizontal"
	            android:layout_marginBottom="20dp"
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
				<ListView
				android:id="@+id/items_list"
				android:layout_width="370dp"
				android:layout_height="320dp"
				android:layout_gravity="center_horizontal"
	            android:gravity="center_horizontal"
				android:layout_marginBottom="20dp"
				android:background="@color/whitegrey"/>
		    </LinearLayout>
			<HorizontalScrollView
			android:layout_width="730dp"
			android:background="@drawable/border"
			android:padding="10dp"
			android:layout_margin="10dp"
			android:layout_height="450dp">
				<LinearLayout
			    android:id="@+id/list_list"
				android:layout_width="730dp"
				android:layout_margin="40dp"
			    android:layout_height="480dp"
			    android:orientation="horizontal">
				    
				</LinearLayout>
			</HorizontalScrollView>
	    </LinearLayout>
 </LinearLayout>