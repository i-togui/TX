<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1200dp"
    android:layout_height="600dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:weightSum="4.0"
    android:keepScreenOn="true"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecorderActivity" >

    
    
    
    
    
    
    
    
	<LinearLayout
    android:layout_width="200dp"
    android:layout_height="fill_parent"
    android:layout_weight="1.0"
    android:weightSum="10.0"
    android:padding="10dp"
    android:background="@drawable/border"
    android:orientation="vertical" >
		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:orientation="horizontal" >
	    	<TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:text="Attendees List"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
		</LinearLayout>
		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="470dp"
	    android:orientation="horizontal" >
	    	<RadioGroup
			android:id="@+id/items_list_attendees"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginBottom="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="40dp"
			android:gravity="center_vertical"
			android:layout_gravity="center_vertical"
			/>
		</LinearLayout>
		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:weightSum="10.0"
	    android:orientation="horizontal">
	            
	    		<EditText
                android:id="@+id/text_attendee"
                android:layout_weight="8.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />                                    
                <ImageButton
		        android:id="@+id/imageButton2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.0"
		        android:src="@drawable/ic_action_add_to_queue"
		        android:onClick="addAttendee" />
		</LinearLayout>	
	</LinearLayout>

	
	
	
	
	
	
	
	
	
	
	
	<LinearLayout
    android:layout_width="200dp"
    android:layout_height="550dp"
    android:layout_weight="2.0"
    android:padding="10dp"
    android:orientation="vertical">
		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="250dp"
	    android:layout_weight="1.0"
	    android:orientation="vertical">
            <TextView
            android:id="@+id/meeting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:text="Meeting Name"
            android:textSize="30sp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
            <ImageView 
		    android:layout_width="200dp"
	        android:layout_height="150dp"
	        android:layout_weight="1.0"
	        android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
	        android:src="@drawable/play"
	        android:id="@+id/imgView"
	        android:onClick="playOrStop"/>
            <Chronometer
	        android:id="@+id/chronometer"
	        android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
	        android:format="%s"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="40sp"/>
		</LinearLayout>
		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="300dp"
	    android:layout_weight="1.0"
	    android:background="@color/whitegreyy"
	    android:orientation="horizontal">
                 <EditText
                 android:id="@+id/text_com"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:gravity="top"
                  /> 
		</LinearLayout>	
	</LinearLayout>
	
	
	
	
	
	
	
	
	
	
	
	
	
	<LinearLayout
    android:layout_width="300dp"
    android:layout_height="fill_parent"
    android:layout_weight="1.0"
    android:padding="10dp"
    android:background="@drawable/border"
    android:orientation="vertical">
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:orientation="horizontal" >
	    	<TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1.0"
            android:text="Questions List"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
		</LinearLayout>
		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="470dp"
	    android:clickable="false"
		android:focusable="false"
	    android:orientation="horizontal" >
	    	<RadioGroup
			android:id="@+id/items_list_Questions"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginBottom="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="40dp"
			android:gravity="center_vertical"
			android:layout_gravity="center_vertical"
			/>
		</LinearLayout>
		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:weightSum="10.0"
	    android:orientation="horizontal">

	    		<EditText
                android:id="@+id/text_question"
                android:layout_weight="8.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />                                    
                <ImageButton
		        android:id="@+id/imageButton2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.0"
		        android:src="@drawable/ic_action_add_to_queue"
		        android:onClick="addQuestion" />
		</LinearLayout>	

	</LinearLayout>

</LinearLayout>
