<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000dp"
    android:layout_height="780dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="3"
    android:orientation="horizontal"
    tools:context=".ManageItems" >
 		<LinearLayout
        android:id="@+id/part1"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:weightSum="10"
        android:orientation="vertical" >
        	<TextView
			android:id="@+id/textView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_marginBottom="40dp"
			android:text="Items-List List"
			android:textAppearance="?android:attr/textAppearanceLarge"/>
        	<ListView
			android:id="@+id/items_list_list"
			android:layout_width="match_parent"
			android:layout_height="440dp"
			android:layout_marginBottom="20dp"
			android:background="@color/whitegrey"/>
			<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="fill_horizontal"
			android:weightSum="10"
			android:orientation="horizontal">
		    	<EditText
		        android:id="@+id/text_items_list"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="7"
		        android:ems="10" />                                    
		        <ImageButton
				android:id="@+id/imageButton1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="3"
				android:layout_marginLeft="10dp"
				android:src="@drawable/ic_action_add_to_queue"
				android:onClick="add_items_list" />
            </LinearLayout>
            <Button
            android:id="@+id/buttonClose"
            style="@style/AppTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:onClick="closeAct"
             />         	
        </LinearLayout>	

        <View
            android:id="@+id/Bar"
            android:layout_width="3dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="640dp"
            android:background="@color/whitegreyy" />

 		<LinearLayout
        android:id="@+id/part2"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="vertical" >
			<LinearLayout
	        android:id="@+id/name"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="40dp"
			android:layout_marginBottom="40dp"
	        android:gravity="center"
	        android:orientation="horizontal">
		        <TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:layout_gravity="center"
				android:text="List Name :"
				android:textAppearance="?android:attr/textAppearanceLarge"/>
		        <TextView
				android:id="@+id/textTitleList"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_gravity="center"
				android:layout_marginLeft="20dp"
				android:text="TOTO"
				android:textAppearance="?android:attr/textAppearanceLarge"/>
		        <ImageButton
				android:id="@+id/imageButton1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:layout_marginLeft="40dp"
				android:layout_gravity="center"
				android:src="@drawable/ic_action_remove"
				android:onClick="remove_list" />
		    </LinearLayout>
		    <LinearLayout
	        android:id="@+id/color"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal">
		        <TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Select a Color :"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

		        <Button
		            android:id="@+id/btnColor"
		            android:layout_width="170dp"
		            android:layout_height="100dp"
		            android:layout_gravity="center"
		            android:layout_marginLeft="40dp"
		            android:background="@color/blue"
		            android:onClick="selectColor"
		            android:src="@drawable/ic_action_remove"
		            android:text="Color" />

			</LinearLayout>
			<LinearLayout
	        android:id="@+id/items"
	        android:layout_weight="2"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:gravity="center"
	        android:orientation="horizontal">
	        	<TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_gravity="center"
				android:layout_marginBottom="20dp"
				android:text="Items :"
				android:layout_marginRight="40dp"
				android:textAppearance="?android:attr/textAppearanceLarge"/>
		        <LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="fill_horizontal"
					android:weightSum="10"
					android:orientation="vertical">
				         <ListView
				android:id="@+id/items_list_items"
				android:layout_width="match_parent"
				android:layout_height="300dp"
				android:layout_marginBottom="20dp"
				android:background="@color/whitegrey"/>
				<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="fill_horizontal"
				android:weightSum="10"
				android:orientation="horizontal">
			    	<EditText
			        android:id="@+id/text_items"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="7"
			        android:ems="10" />                                    
			        <ImageButton
					android:id="@+id/imageButton1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:layout_marginLeft="10dp"
					android:src="@drawable/ic_action_add_to_queue"
					android:onClick="add_item" />
			        <ImageButton
					android:id="@+id/imageButton2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="3"
					android:layout_marginLeft="10dp"
					android:onClick="removeItem"
					android:src="@drawable/ic_action_remove"/>
	            </LinearLayout>
		            </LinearLayout>
			</LinearLayout>
		    </LinearLayout>
</LinearLayout>
